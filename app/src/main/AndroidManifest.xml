<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.groupf.drushtieyevision">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Drushti Eye vision"></activity>
        <activity
            android:name=".ContactActivity"
            android:label="@string/contact"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.groupf.drushtieyevision.MainActivity" />
        </activity>
        <activity
            android:name=".TeamMembers"
            android:label="Our Team"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.groupf.drushtieyevision.MainActivity" />
        </activity>
        <activity
            android:name=".about"
            android:label="@string/title_activity_about"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.groupf.drushtieyevision.MainActivity" />
        </activity>
        <activity
            android:name=".donorActivity"
            android:label="Eye Donation Form"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.groupf.drushtieyevision.MainActivity" />
        </activity>
        <activity android:name=".Gallery"
            android:label="Gallery"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.groupf.drushtieyevision.MainActivity" />
        </activity>
    </application>

</manifest>